def hangle_length(num) :
  txt = str(this.unsafe_val)
  utxt = unicode(txt, 'utf-8') 
  curr_val = len(utxt)
  
  if num gt curr_val :
    error(this.lget("lenAtLeast", min=num, count=curr_val))
]]></content>
